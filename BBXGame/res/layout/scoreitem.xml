<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout  android:id="@+id/llReocrdItem" xmlns:android="http://schemas.android.com/apk/res/android"    android:orientation="horizontal" android:layout_width="fill_parent"  android:layout_height="wrap_content"
     >
   <TextView
  		 android:id="@+id/tvNum" 
         android:layout_height="wrap_content" 
         android:layout_width="wrap_content"    
         android:textColor="#000"
      
         android:paddingBottom="4dip"
         android:textSize="16dip" 
         android:layout_weight="1"   
      android:gravity="center"
          />
     <TextView
		 android:id="@+id/tvUsername"
         android:layout_height="wrap_content" 
         android:layout_width="wrap_content" 
         android:textColor="#000"
    
         android:textSize="16dip" 
         android:layout_weight="1"   
         android:gravity="center"
          />
     <TextView
         android:id="@+id/tvScore"
         android:layout_height="wrap_content" 
         android:layout_width="wrap_content" 
         android:text=""
         android:textColor="#000"    
         android:textSize="16dip" 
         android:layout_weight="1"   
         android:gravity="center"
         />
 </LinearLayout>